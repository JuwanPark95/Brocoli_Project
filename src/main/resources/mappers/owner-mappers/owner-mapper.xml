		<result property="p_Insert_Date" column=""/>
		<result property="p_Modify_Id" column=""/>
		<result property="p_Modify_Date" column=""/>
		<result property="p_Show_YN" column=""/>
		<result property="p_Brand_NO" column=""/>
	</resultMap>
	
	<!-- 상품 이미지 등록정보 -->
	<resultMap type="productImgSet" id="Product_File">
		<id property="pf_NO" column=""/>
		
		<result property="pf_Img1" column=""/>
		<result property="pf_Img1_ReName" column=""/>
		<result property="pf_Img2" column=""/>
		<result property="pf_Img2_ReName" column=""/>
		<result property="pf_Img3" column=""/>
		<result property="pf_Img3_ReName" column=""/>
		<result property="pf_Img4" column=""/>		
		<result property="pf_Img4_ReName" column=""/>
		<result property="pf_Img5" column=""/>
		<result property="pf_Img5_ReName" column=""/>
		<result property="pf_Img6" column=""/>
		<result property="pf_Img6_ReName" column=""/>
		<result property="pf_Dimg1" column=""/>
		<result property="pf_Dimg1_ReName" column=""/>
		<result property="pf_Dimg2" column=""/>			
		<result property="pf_Dimg2_ReName" column=""/>
		<result property="pf_Dimg3" column=""/>	
		<result property="pf_Dimg3_ReName" column=""/>
		<result property="pf_P_NO" column=""/>	
	</resultMap>
	
	<!-- 상품정보등록 -->
	<insert id="insertProduct" parameterType="Product">
		INSERT INTO PRODUCT
		VALUES(SEQ_BID.NEXTVAL, #{p_Code},#{p_Name},#{p_Price},#{p_Sail_Price},#{p_Last_Price},#{p_Bcategory},#{p_Scategory},
				#{p_Comment},DEFAULT,DEFAULT,#{p_Writer},SYSDATE,DEFAULT,SYSDATE,DEFAULT,#{p_Brand_NO})
	</insert>
	
	<!-- 상품 이미지 정보등록 -->
	<insert id="insertProductImg" parameterType="productImgSet">
		INSERT INTO PRODUCT_FILE
		VALUES(SEQ_BID.NEXTVAL, #{pf_Img1},#{pf_Img1_ReName},#{pf_Img2},#{pf_Img2_ReName},#{pf_Img3},#{pf_Img3_ReName},#{pf_Img4},
				#{pf_Img4_ReName},#{pf_Img5},#{pf_Img5_ReName},#{pf_Img6},#{pf_Img6_ReName},#{pf_Dimg1},#{pf_Dimg1_ReName},#{pf_Dimg2},
				#{pf_Dimg2_ReName},#{pf_Dimg3},#{pf_Dimg3_ReName},#{pf_P_NO})
	</insert>
	
	
