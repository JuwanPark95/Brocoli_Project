	<!-- resultMap -->
	<!-- 상품등록정보 -->
 	<resultMap id="producResultSet" type="Product">
		<id property="p_No" column="BID"/>
		
		<result property="p_Code" column=""/>
		<result property="p_Name" column=""/>
		<result property="p_Price" column=""/>
		<result property="p_Sail_Price" column=""/>
		<result property="p_Last_Price" column=""/>
		<result property="p_Bcategory" column=""/>
		<result property="p_Scategory" column=""/>
		<result property="p_Comment" column=""/>
